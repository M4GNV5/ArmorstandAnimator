<Window x:Class="ArmorstandAnimator.GUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:conv="clr-namespace:ArmorstandAnimator.GUI.XAML.Converters"
		Title="Armorstand Animator" Height="511" Width="769">
	<Window.Resources>
		<conv:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter"></conv:ZeroToCollapsedConverter>
	</Window.Resources>
	<DockPanel>
		<ToolBarTray DockPanel.Dock="Top">
			<ToolBar>
				<Menu>
					<MenuItem Header="File">
						<MenuItem Header="New" />
						<MenuItem Header="Save" />
						<MenuItem Header="Load" />
						<MenuItem Header="Recent" Name="menuFileRecent"></MenuItem>
						<Separator></Separator>
						<MenuItem Header="Export" Name="menuFileExport" />
						<MenuItem Header="Import" Name="menuFileImport" />
					</MenuItem>
				</Menu>
			</ToolBar>
		</ToolBarTray>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem>
				<TextBlock Name="lblStatusIndicator" Text="Ready" />
			</StatusBarItem>
		</StatusBar>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="143*" />
				<ColumnDefinition Width="475*" />
				<ColumnDefinition Width="143*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="89*" />
				<RowDefinition Height="31*" />
			</Grid.RowDefinitions>
		</Grid>
	</DockPanel>
</Window>